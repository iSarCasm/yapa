<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comments</h2>
<%= render(@post.comments) || "No comments yet." %>
<h2>Leave a comment</h2>
<%= render "comments/form", comment: @comment %>
