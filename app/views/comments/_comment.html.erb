<div class="card" style="margin: 10px 0" data-test="comment">
  <div class="card-body">
    <h5 class="card-title"><%= comment.user.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Posted <%= time_ago_in_words(comment.created_at) %> ago.</h6>
    <p class="card-text"><%= comment.body %></p>

    <% if policy(comment).edit? %>
       <%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %> |
    <% end %>
    <% if policy(comment).destroy? %>
      <%= link_to 'Destroy', post_comment_path(comment.post, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>